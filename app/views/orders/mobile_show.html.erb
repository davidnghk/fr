  <p>  <strong><%= t("client_ref") %>:</strong>  <%= @order.user_ref %></p>
  <p>  <strong><%= t("repair_date") %>:</strong>  <%= @order.repair_date %></p>
  <p>  <strong><%= t("status") %>: </strong>  <%= t(@order.status)  %></p>
  <p>  <strong><%= t("technician") %>:</strong>  <%= @order.technician.name %></p>
