
<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:x="urn:schemas-microsoft-com:office:excel"
  xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
    <Table>
      <Row>
        <Cell><Data ss:Type="String"><%= t("client") %></Data></Cell>
        <Cell><Data ss:Type="String"><%= t("store") %></Data></Cell>
        <Cell><Data ss:Type="String"><%= t("call_date") %></Data></Cell>
        <Cell><Data ss:Type="String"><%= t("status") %></Data></Cell>
        <Cell><Data ss:Type="String"><%= t("repair_date") %></Data></Cell>
        <Cell><Data ss:Type="String"><%= t("client_ref") %></Data></Cell>
        <Cell><Data ss:Type="String"><%= t("technician") %></Data></Cell>
        <Cell><Data ss:Type="String"><%= t("device") %></Data></Cell>
        <Cell><Data ss:Type="String"><%= t("issue") %></Data></Cell>
        <Cell><Data ss:Type="String"><%= t("work") %></Data></Cell>
      </Row>
    <% @orders.each do |order| %>
      <% if I18n.locale == :en  %>
        <Row>
          <Cell><Data ss:Type="String"><%= order.store.client.name %></Data></Cell>
          <Cell><Data ss:Type="String"><%= order.store.name %></Data></Cell>
          <Cell><Data ss:Type="String"><%= order.call_date %></Data></Cell>
          <Cell><Data ss:Type="String"><%= t(order.status) %></Data></Cell>
          <Cell><Data ss:Type="String"><%= order.repair_date %></Data></Cell>
          <Cell><Data ss:Type="String"><%= order.user_ref %></Data></Cell>
          <Cell><Data ss:Type="String"><%= order.technician.name %></Data></Cell>
          <Cell><Data ss:Type="String"><%= order.device.name %></Data></Cell>
          <Cell><Data ss:Type="String"><%= order.issue.name %></Data></Cell>
          <Cell><Data ss:Type="String"><%#= order.work.name %></Data></Cell>
        </Row>
      <% else %>
        <Row>
          <Cell><Data ss:Type="String"><%= order.store.client.chi_name %></Data></Cell>
          <Cell><Data ss:Type="String"><%= order.store.chi_name %></Data></Cell>
          <Cell><Data ss:Type="String"><%= order.call_date %></Data></Cell>
          <Cell><Data ss:Type="String"><%= t(order.status) %></Data></Cell>
          <Cell><Data ss:Type="String"><%= order.repair_date %></Data></Cell>
          <Cell><Data ss:Type="String"><%= order.user_ref %></Data></Cell>
          <Cell><Data ss:Type="String"><%= order.technician.name %></Data></Cell>
          <Cell><Data ss:Type="String"><%= order.device.chi_name %></Data></Cell>
          <Cell><Data ss:Type="String"><%= order.issue.chi_name %></Data></Cell>
          <Cell><Data ss:Type="String"><%#= order.work.chi_name %></Data></Cell>
        </Row>
      <% end %>
    <% end %>
    </Table>
  </Worksheet>
</Workbook>

